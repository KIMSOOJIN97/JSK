    <meta charset="utf-8">
    <style>
        td {
            text-align: center;
        }

        td#aa {
            text-align: left;
            padding-left: 8px;
            padding-right: 8px;
        }

        th {
            padding-left: 8px;
            padding-right: 8px;
        }

        #subname {
            width: 200px;
        }
        #gradation {
              background: #b1bfca;
            }
    </style>

          
    <title>광운대학교</title>
        
</head>

<body style="overflow:hidden;background-color:#f0f0f0;" class="Head_nav" style="font-size:100%;">

      <div class="ui secandary menu" style="height: 70px;" id="gradation">
        <a class="item" href="/Main">
          <strong>JSK 학사정보시스템</strong>
        </a>
        <a class="item" href="/grade_check">
          <strong>성적 조회</strong>
        </a>
        <a class="item" href="/Class">
          <strong>과목 조회</strong>
        </a>
        <div class="right menu">
          <a class="item" href="/ClassApply">
            <strong>수강신청하기</strong>
          </a>
          <a class="item" href="/Friend">
            <strong>친구</strong>
          </a>
          <script>
            var sessionuser = '<%-userid%>'
            if (sessionuser == 'No_One') {
              document.write('<a class="item" href="/Login" style="margin-right:30px"><strong>Login</strong></a></div>');
            } else {
              document.write('<a class="item" href="/Mypage"><i class="user outline icon"></i><%-userid%></a><a class="item" href="/Logout" style="margin-right:30px"><strong>Logout</strong></a>');
            }
          </script>
        </div>
      
      
      
      </div>
    
    
    <h2 style="text-align: center; margin-top: 20px; margin-bottom: 20px;">과목조회</h2>

    <div style="overflow:scroll; width:100vw; height:100vh;">

        <table border="1" style="margin: auto">
            <thead>
                <tr>
                    <th>과목번호</th>
                    <th id="subname">과목이름</th>
                    <th>학점</th>
                    <th>구분</th>
                    <th>정원</th>
                    <th>출석</th>
                    <th>공지사항</th>
                </tr>
            </thead>
            <% for(var i=0; i<rows1.length; i++) { %>
                <tr>
                    <td><%= rows1[i].O_no %></td>
                    <td id="aa"><%= rows2[i].subject_name %></td>
                    <td><%= rows2[i].credit %></td>
                    <td><%= rows2[i].subject_division %></td>
                    <td><%= rows1[i].team_project %></td>
                    <form method="GET" action="/ClassAttendance">
                        <td><button class="ui button" name="classname" value="<%= rows1[i].O_no %>">출석확인</button></td>
                    </form>
                    <form method="GET" action="/Notice">
                        <td><button class="ui button" name="classname" value="<%= rows1[i].O_no %>">공지사항</button></td>
                    </form>
                </tr>
            <% } %>
        </table>

    </div>
</body>

</html>