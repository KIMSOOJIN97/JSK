        <meta charset="UTF-8">
        <title>업로드 페이지</title>

        <style type="text/css">

            .gradation {
                background: linear-gradient( to bottom, white, #0D0922 )
            }
                
        </style>
    
        
        <script>
            
            var sel_file;
            
            $(document).ready(function() {
                $("#input_img").on("change", handleImgFileSelect);
            });
            
            function handleImgFileSelect(e) {
                var files = e.target.files;
                var filesArr = Array.prototype.slice.call(files);
                
                console.log(files);
                
                filesArr.forEach(function(f) {
                    if(!f.type.match("image.*")) {
                        alert("확장자는 이미지 확장자만 가능합니다. 다시 선택하세요.");
                        return;
                    }
                    
                    sel_file = f;
                    
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $("#img").attr("src", e.target.result);
                    }
                    reader.readAsDataURL(f); 
                });
            }
            
            
            
        </script>
        
    </head>
    <body style="background-color:#000000">

        <div class="gradation" style="width: 100%; height: 100px; margin-bottom: 10px;">
            <% include header_footer/header %>
        </div>
        
        <div style="color:white; text-align:center; margin-top:40px">
            
            <h1 style="color:white; margin-bottom:30px">Upload Picture</h1>
            
            <form action="/UploadButton" method="post" enctype="multipart/form-data">
                
                <div class="ui labeled input" style="margin-bottom:20px">
                  <div class="ui label">
                    Name
                  </div>
                  <input type="text" placeholder="Name" name="name">
                </div><br>    
                
                <div class="ui labeled input" style="margin-bottom:20px">
                  <div class="ui label">
                    Age
                  </div>
                  <input type="text" placeholder="Age" name="age">
                </div><br>
                
                <input type="file" name="photo" id="input_img">
                <input type="submit" value="전송" name="submit">
            </form>
        </div>
        
        <div style="text-align:center; margin-top:20px">
            <div class="img_wrap">
                <img id="img" style="width:300px; height: auto">
            </div>
        </div>
    
    </body>    
</html>

