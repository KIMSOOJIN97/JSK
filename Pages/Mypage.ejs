        <form method="post" action="/MypageCheck">
            <div class="ui four column grid" style="text-align: center; width: 1000px; margin: 0 auto 0 auto;">
            <% for(var i=0; i<rows.length; i++) { %>
              <div class="column">

                <div class="ui card">

                    <button class="image" style="height: 300px; background-color: #000000" name="face_img" value="<%=rows[i].face_file%>">
                      <img style="width=100%; height:100%; object-fit: contain; background-color: #000000" src="<%=rows[i].face_file%>">
                    </button>

                  <div class="content">
                      <div><strong style="font-size: 1.4em"><%=rows[i].face_name%></strong>&nbsp;&nbsp;<%=rows[i].face_age%>세</div>
