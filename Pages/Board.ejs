<!DOCTYPE html>
<html>
    <head>
        
        <link rel="stylesheet" type="text/css" href="semantic/semantic.css">
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script src="semantic/semantic.js"></script>
        <script src="https://kit.fontawesome.com/fcb4a1c19d.js" crossorigin="anonymous"></script>
        
        
        <meta charset="UTF-8">
        <title>Board 페이지</title>

        <style type="text/css">
            a:hover{text-decoration:underline; color:black;}

            .gradation {
                background: linear-gradient( to bottom, white, #0D0922 )

        </style>
        
    </head>
    <body style="background-color:#000000">

        <div class="gradation" style="width: 100%; height: 100px; margin-bottom: 10px;">
            <% include header_footer/header %>
        </div>
        
        <h2 align="center" style="color:white">Board</h2>
        
        <p>게시글 수: <%= rows.length %> </p>
        
        <table class="ui celled table">
          <thead>
            <tr>
              <th width="5%" align="center">#</th>
              <th width="40%" align="left" style="padding-left:10px">제목</th>
              <th width="10%" align="center">작성자</th>
              <th width="20%" align="center" style="text-align:center">작성일</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<rows.length; i++) { %>
                <tr id="box<%=rows[i].b_no%>">
                  <td><%= rows[i].b_no %></td>
                  <td>
                    <form method="post" action="/BoardContent">  
                        <button class="basic ui button" name="boardno" value="<%= rows[i].b_no %>">
                            <%= rows[i].b_title %>
                        </button>
                    </form>
                  </td>
                  <td><%= rows[i].b_writer %></td>
                  <td style="text-align:center"><%= rows[i].b_date %></td>
                </tr>
            <% } %>
          </tbody>
        </table>
        
        <form method="post" action="/BoardWriting">
            <div align="right" style="padding-right:40px; padding-top:10px">
                <button class="ui blue button">
                    Write Content
                </button>   
            </div>
        </form>

        
        <br><br>
    </body>

<% include header_footer/footer %>